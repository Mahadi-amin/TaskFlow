                                    <button class="btn btn-navbar" type="submit" style="color:#fdffff;">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search" style="color:#fdffff;">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" id="notification-icon" data-toggle="dropdown" href="#" style="color:#fdffff;">
                        <i class="far fa-bell"></i> <!-- Changed to a bell icon for notifications -->
                        <span class="badge badge-danger navbar-badge" id="notification-badge">0</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" id="notification-dropdown" style="width: 300px;">
