@model TaskEditModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card w-25 shadow border-0" style="background: linear-gradient(135deg, #f8f9fa, #e3f2fd);">
        <div class="card-header text-white py-2" style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
            <h5 class="mb-0 text-truncate">@Model.Title</h5>
        </div>
        <div class="card-body py-3 small">
            <p>
                <strong>Status:</strong>
                <span class="badge rounded-pill bg-gradient bg-info text-dark fs-6">
                    @Model.StatusList?.FirstOrDefault(s => s.Value == Model.StatusId?.ToString())?.Text
                </span>
            </p>

            <p>
                <strong>Priority:</strong>
                <span class="badge rounded-pill text-white fs-6 @(Model.Priority switch {
                    Priority.Low => "bg-success",
                    Priority.Medium => "bg-warning text-dark",
                    Priority.High => "bg-danger",
                    _ => "bg-secondary"
                })">@Model.Priority</span>
            </p>

            <p>
                <strong>Due Date:</strong>
                <span class="badge bg-light text-dark border border-secondary fs-6">@Model.DueDate.ToString("dd MMM yyyy")</span>
            </p>
        </div>
    </div>
</div>
