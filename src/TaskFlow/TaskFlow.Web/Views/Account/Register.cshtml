@model RegistrationModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post" class="form-horizontal">
    @if (ViewData.ModelState[""]?.Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <strong>Something went wrong! Please check the details and try again.</strong>
        </div>
    }

    <div class="form-group">
        <label for="Email" class="col-md-2 control-label">Email</label>
        <div class="col-md-6">
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="Password" class="col-md-2 control-label">Password</label>
        <div class="col-md-6">
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="ConfirmPassword" class="col-md-2 control-label">Confirm Password</label>
        <div class="col-md-6">
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <p>Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a>.</p>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


